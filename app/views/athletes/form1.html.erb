<%= simple_form_for  @athlete do |f| %>

  <% if @athlete.errors.any? %>
 <div id="error_explanation">
 <h2><%=  "Zgłoszenie nie może być przyjęte. Ilość błędów: #{athlete.errors.count}" %></h2>
<ul>
 <% athlete.errors.full_messages.each do |message| %>
         <li><%= message %></li>
       <% end %>

       </ul>
 </div>
 <% end %>
 <%=f.input(:event_id, as: :hidden) %>

 <div>
   <%=f.input :first_name, required: false %>
   </div>
   <%=f.input :last_name %>
   <div>
   <%=f.label :gender  %>
   <%= f.radio_button(:gender, 'K', required: true) %> Kobieta
   <%= f.radio_button(:gender, 'M', required: true) %> Mężczyzna
   </div>
   <%=f.label :birthdate %>
   <%=f.date_select(:birthdate, start_year: 1920, use_month_numbers: true, order: [:day, :month, :year]) %>
<div>
<%=f.input :city %>
</div>

<div class="field"> <%= f.label :route_id %>
  <% routes.each do |route| %>
    <%=f.radio_button(:route_id, route.id, required: true) %>
    <%= route.name %>
  <% end %>
</div>
<%= f.input :phone %>
<%=f.input :team %>
 <%= f.input :email, :label => "Email" %>
 <br></br>
 <div class="field">
  <%= f.check_box :terms_accepted , required: true %>
  <%= f.label "zapoznałem się z Regulaminem i akceptuję jego postanowienia" %>
  <%= f.check_box :gdpr_accepted , required: true %>
    <%= f.label "Wyrażam zgodę na wykorzystanie i przetwarzanie moich danych osobowych" %>
</div>

<div class="actions">
<%= f.button :submit,'Wyślij zgłoszenie' %>
</div>

  <% end %>
